@model CreateProductDto
@{
    ViewData["Title"] = "Mülk Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <label>Resim Url</label>
    <input type="text" placeholder="Resim Url" asp-for="ImageUrl" class="form-control" />
    <br />

    <label>Başlık</label>
    <input type="text" placeholder="Başlık" asp-for="Title" class="form-control" />
    <br />

    <select asp-for="Category" class="form-control">
        <option>Kategori Seçiniz</option>
        <option value="Modern">Modern</option>
        <option value="Çatı Katı">Çatı Katı</option>
        <option value="Lüks">Lüks</option>
        <option value="Ahşap">Ahşap</option>
    </select>
    <br />

    <label>Fiyat</label>
    <input type="number" placeholder="Fiyat" asp-for="Price" class="form-control" />
    <br />

    <label>Yatak Odası Sayısı</label>
    <input type="number" placeholder="Yatak Odası Sayısı" asp-for="BedroomCount" class="form-control" />
    <br />

    <label>Banyo Sayısı</label>
    <input type="number" placeholder="Banyo Sayısı" asp-for="BathroomCount" class="form-control" />
    <br />

    <label>Alan (m2)</label>
    <input type="number" placeholder="Alan (m2)" asp-for="Area" class="form-control" />
    <br />

    <label>Kat Sayısı</label>
    <input type="number" placeholder="Kat Sayısı" asp-for="Floor" class="form-control" />
    <br />

    <label>Park Alanı Adedi</label>
    <input type="number" placeholder="Park Alanı Adedi" asp-for="ParkingCount" class="form-control" />
    <br />

    <button class="btn btn-outline-success">Kaydet</button>
</form>

