@model List<ResultCounterDto>


<div class="fun-facts">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="wrapper">
                    <div class="row">
                        @{var count = 0;}
                        @foreach (var item in Model)
                        {
                            count++;
                            <div class="col-lg-4 @(count > 3 ? "mt-5" : "")">
                                <div class="counter">
                                    <h2 class="timer count-title count-number" data-to="@item.Count" data-speed="1000"></h2>
                                    
                                    @{
                                        var titleArray = item.Title.Split(" ");
                                        if(titleArray.Length == 1)
                                        {
                                            <p class="count-text">@titleArray[0]</p>
                                        }
                                        else
                                        {
                                            <p class="count-text">
                                            @for(int i = 0; i<titleArray.Length; i++)
                                            {
                                                @titleArray[i]
                                                <br />
                                            }
                                            </p>
                                        }
                                    }
                                    
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>